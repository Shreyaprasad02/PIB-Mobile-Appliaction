<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50sp"

    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:text="PRESS INFORMATION BUREAU"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/averia_libre_bold"
        android:textColor="@color/black"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:text="Government of India"
    android:gravity="center"
    android:textSize="15sp"
    android:fontFamily="@font/averia_libre_light"
    android:textColor="@color/black"/>
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/emblem"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/azadi"
        android:layout_gravity="center"/>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signin"
        android:layout_width="250sp"
        android:layout_gravity="center"
        android:layout_height="45sp" />
    <ImageView
        android:id="@+id/fb"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:src="@drawable/fb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="or"
        android:textColor="@color/black"
        android:gravity="center"/>

    <Button
        android:id="@+id/email_login_redirect"
        android:layout_width="250sp"
        android:layout_height="45sp"
        android:layout_margin="20sp"
        android:layout_gravity="center"
        android:text="Email"
        android:backgroundTint="@color/white"
        android:textColor="@color/purple_200"
        android:elevation="20sp"
        android:shadowColor="@color/black"
        android:textSize="13sp"
        />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="300sp"
        android:layout_height="1sp"
        app:dividerColor="@color/black"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Do not have an Account?"/>
        <TextView
            android:id="@+id/redirect_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:textColor="@color/purple_200"
            android:text="SignUp"/>
    </LinearLayout>



</LinearLayout>